<section id="contact">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">Contact Me!</h2>
        <h3 class ="section-subheading text-muted">To talk about anything, just fill in the form. See how it feels!</h3>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <%= simple_form_for @contact, :html => { :name => "sentMessage", :id => "contactForm" } do |f| %>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.input :name, :required => true , :class => "input-xlarge", :placeholder => "Your Name", :id => "name", :label => false %>
                <p class="help-block text-danger"></p>
              </div>
              <div class="form-group">
                <%= f.input :email, :required => true, :class => "form-control", :placeholder => "Your Email", :id => "email", :label => false, :type => "email" %>
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.input :message, :as => :text, :required => false, :input_html => { :rows => 8 }, :class => "form-control", :id => "message", :placeholder => "Your Message", :label => false %> 
                <div class="hidden">
                  <%= f.input :nickname, :hint => 'Leave this field blank!' %>
                </div>
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12 text-center">
              <div id="success"></div>
              <div class="form-actions">
                <%= f.button :submit, 'Send it to me', :class => "btn btn-xl" %>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <!-- need to add a comment -->
</section>